<div class="cricket-dashboard">
  <div class="header">
    <h1>üèè Live Cricket Scores</h1>
    <div class="refresh-info">
      <button (click)="refreshScores()" [disabled]="loading" class="refresh-btn">
        <span *ngIf="loading">Refreshing...</span>
        <span *ngIf="!loading">üîÑ Refresh</span>
      </button>
      <span class="last-updated">Last updated: {{ formatTime(lastUpdated) }}</span>
    </div>
  </div>

  <div *ngIf="error" class="error-message">
    {{ error }}
    <button (click)="refreshScores()" class="retry-btn">Try Again</button>
  </div>

  <div *ngIf="loading && matches.length === 0" class="loading-spinner">
    <div class="spinner"></div>
    <p>Loading cricket scores...</p>
  </div>

  <div class="matches-container" *ngIf="!loading || matches.length > 0">
    <div *ngFor="let match of matches" class="match-card" [class.live-match]="match.live">
      <div class="match-header">
        <div class="match-title">{{ match.name }}</div>
        <div class="match-format">{{ match.format }}</div>
      </div>

      <div class="match-info">
        <div class="venue-date">
          <span class="venue">üìç {{ match.venue }}</span>
          <span class="date">üìÖ {{ match.date }}</span>
        </div>
      </div>

      <div class="teams-scores">
        <div class="team">
          <div class="team-name">{{ match.team1.name }}</div>
          <div class="team-score">{{ match.team1.score }}</div>
          <div class="team-overs" *ngIf="match.team1.overs">({{ match.team1.overs }} overs)</div>
        </div>

        <div class="vs-divider">VS</div>

        <div class="team">
          <div class="team-name">{{ match.team2.name }}</div>
          <div class="team-score">{{ match.team2.score }}</div>
          <div class="team-overs" *ngIf="match.team2.overs">({{ match.team2.overs }} overs)</div>
        </div>
      </div>

      <div class="match-status" [ngClass]="getMatchStatusClass(match)">
        <div class="status-text">{{ match.status }}</div>
        <div *ngIf="match.live" class="live-indicator">üî¥ LIVE</div>
      </div>

      <div *ngIf="match.current_over && match.live" class="current-over">
        <strong>Current Over:</strong> {{ match.current_over }}
      </div>
    </div>
  </div>

  <div *ngIf="matches.length === 0 && !loading" class="no-matches">
    <h3>No matches available</h3>
    <p>Check back later for live cricket scores!</p>
  </div>
</div>

<style>
.cricket-dashboard {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  flex-wrap: wrap;
  gap: 15px;
}

.header h1 {
  color: #2c5282;
  margin: 0;
  font-size: 2.5rem;
}

.refresh-info {
  display: flex;
  align-items: center;
  gap: 15px;
  flex-wrap: wrap;
}

.refresh-btn {
  background: #4299e1;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 14px;
  transition: background-color 0.3s;
}

.refresh-btn:hover:not(:disabled) {
  background: #3182ce;
}

.refresh-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.last-updated {
  color: #666;
  font-size: 14px;
}

.error-message {
  background: #fed7d7;
  color: #c53030;
  padding: 15px;
  border-radius: 8px;
  margin-bottom: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.retry-btn {
  background: #c53030;
  color: white;
  border: none;
  padding: 8px 15px;
  border-radius: 5px;
  cursor: pointer;
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50px;
}

.spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #e2e8f0;
  border-top: 4px solid #4299e1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.matches-container {
  display: grid;
  gap: 20px;
}

.match-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s, box-shadow 0.2s;
}

.match-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
}

.live-match {
  border-left: 5px solid #48bb78;
  background: linear-gradient(135deg, #f0fff4 0%, #ffffff 100%);
}

.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.match-title {
  font-size: 1.25rem;
  font-weight: bold;
  color: #2d3748;
}

.match-format {
  background: #e2e8f0;
  color: #4a5568;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: bold;
}

.match-info {
  margin-bottom: 20px;
}

.venue-date {
  display: flex;
  gap: 20px;
  color: #666;
  font-size: 14px;
  flex-wrap: wrap;
}

.teams-scores {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  gap: 20px;
  align-items: center;
  margin-bottom: 20px;
}

.team {
  text-align: center;
}

.team-name {
  font-size: 1.1rem;
  font-weight: bold;
  color: #2d3748;
  margin-bottom: 8px;
}

.team-score {
  font-size: 1.8rem;
  font-weight: bold;
  color: #2c5282;
  margin-bottom: 4px;
}

.team-overs {
  font-size: 14px;
  color: #666;
}

.vs-divider {
  background: #e2e8f0;
  color: #4a5568;
  padding: 8px 16px;
  border-radius: 20px;
  font-weight: bold;
  font-size: 12px;
}

.match-status {
  padding: 12px;
  border-radius: 8px;
  text-align: center;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.status-live {
  background: #c6f6d5;
  color: #22543d;
}

.status-completed {
  background: #e2e8f0;
  color: #4a5568;
}

.status-upcoming {
  background: #fed7e2;
  color: #97266d;
}

.live-indicator {
  background: #e53e3e;
  color: white;
  padding: 4px 8px;
  border-radius: 15px;
  font-size: 12px;
  font-weight: bold;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.current-over {
  background: #edf2f7;
  padding: 12px;
  border-radius: 8px;
  font-size: 14px;
  color: #2d3748;
}

.no-matches {
  text-align: center;
  padding: 60px 20px;
  color: #666;
}

.no-matches h3 {
  margin-bottom: 15px;
  color: #2d3748;
}

@media (max-width: 768px) {
  .header {
    flex-direction: column;
    align-items: stretch;
  }
  
  .header h1 {
    font-size: 2rem;
    text-align: center;
  }
  
  .refresh-info {
    justify-content: center;
  }
  
  .teams-scores {
    grid-template-columns: 1fr;
    gap: 15px;
  }
  
  .vs-divider {
    order: 2;
    align-self: center;
  }
  
  .venue-date {
    flex-direction: column;
    gap: 8px;
  }
  
  .match-status {
    flex-direction: column;
    gap: 8px;
  }
}
</style>